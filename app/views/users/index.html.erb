<h1>Welcome to Allergen</h1>
<div id = "wrapper">
  <% @users.each do |user| %>
    <div class = "user-container">
      <h4><%= user.fullname %></h4>
      <%= link_to "View Recipes", user_path(user) %> <%= user.recipes.count %>
      <%= button_to "Delete", user_path(user), :method => :delete , :class => "btn btn-danger user_delete_button"%>
    </div>
  <% end %>
</div>
